<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray5"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titlebar9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="设置"
        titlebar:centerType="textView"
        titlebar:leftDrawable="@drawable/comm_titlebar_back_normal"
        titlebar:leftDrawablePadding="0dp"
        titlebar:leftText="返回"
        titlebar:leftType="textView" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@drawable/selector_option_item"
            android:gravity="center_vertical"
            android:paddingRight="6px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6px"
                android:layout_marginLeft="30px"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/header_pic"
                android:textColor="@color/black0"
                android:textSize="15sp"/>
            <!--头像-->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/portraitImageView2"
                android:layout_width="130px"
                android:layout_height="130px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                fresco:placeholderImage="@color/assist_green"
                fresco:roundedCornerRadius="15dp"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImageScaleType="focusCrop"
                fresco:failureImageScaleType="focusCrop" />


        </com.zhy.autolayout.AutoLinearLayout>

        <View
            style="@style/Line"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            />

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivName"
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_text="@string/nickname"
            app:left_text_color="@color/black0"
            app:left_text_margin_left="30px"
            app:left_text_size="16sp"
            app:right_text="123"
            app:right_text_color="@color/gray2"
            app:right_text_margin_right="40px"
            app:right_text_size="14sp"/>

        <View
            style="@style/Line"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            />

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivAccount"
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_text="@string/wechat_account"
            app:left_text_color="@color/black0"
            app:left_text_margin_left="30px"
            app:left_text_size="16sp"
            app:right_text="12345"
            app:right_text_color="@color/gray2"
            app:right_text_margin_right="40px"
            app:right_text_size="14sp"/>

        <View
            style="@style/Line"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            />

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivQRCodeCard"
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_text="@string/qr_code_card"
            app:left_text_color="@color/black0"
            app:left_text_margin_left="30px"
            app:left_text_size="16sp"
            app:right_image_margin_right="40px"
            app:right_src="@mipmap/ic_qr_code"/>

        <View
            style="@style/Line"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            />

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/change_password"
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_text="更改/填写密码"
            app:left_text_color="@color/black0"
            app:left_text_margin_left="30px"
            app:left_text_size="16sp"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:orientation="vertical">

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivGender"
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_text="@string/gender"
            app:left_text_color="@color/black0"
            app:left_text_margin_left="30px"
            app:left_text_size="16sp"
            app:right_text=""
            app:right_text_color="@color/gray2"
            app:right_text_margin_right="40px"
            app:right_text_size="14sp"/>

        <View
            style="@style/Line"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            />

        <com.lqr.optionitemview.OptionItemView
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_text="@string/area"
            app:left_text_color="@color/black0"
            app:left_text_margin_left="30px"
            app:left_text_size="16sp"/>

        <View
            style="@style/Line"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            />

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivSignature"
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            app:left_text="@string/signature"
            app:left_text_color="@color/black0"
            app:left_text_margin_left="30px"
            app:left_text_size="16sp"
            app:right_text="@string/not_fill"
            app:right_text_color="@color/gray2"
            app:right_text_margin_right="40px"
            app:right_text_size="14sp"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>